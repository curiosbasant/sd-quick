{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "paths": {
      "~/*": ["./src/*"],
      "~/assets/*": ["./assets/*"]
    }
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
